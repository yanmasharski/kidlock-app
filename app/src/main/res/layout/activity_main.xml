<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="48dp" />

    <TextView
        android:id="@+id/tvCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите код:"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Поле для ввода кода - используем EditText для поддержки клавиатуры -->
    <EditText
        android:id="@+id/etCodeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="----"
        android:textSize="64sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:letterSpacing="0.2"
        android:layout_marginBottom="32dp"
        android:inputType="textCapCharacters|textNoSuggestions"
        android:maxLength="4"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:cursorVisible="false"
        android:gravity="center"
        android:padding="0dp"
        android:minWidth="200dp"
        android:nextFocusDown="@id/btnQ" />

    <TextView
        android:id="@+id/tvRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оставшееся время: --"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginBottom="32dp"
        android:minHeight="32dp"
        android:gravity="center" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="6"
        android:layout_marginBottom="32dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- Row 1: Q-P -->
        <Button
            android:id="@+id/btnQ"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Q"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusUp="@id/etCodeInput" />
        <Button
            android:id="@+id/btnW"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="W"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnE"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="E"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnR"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="R"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnT"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="T"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Y"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <!-- Row 2: A-L -->
        <Button
            android:id="@+id/btnA"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="A"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnS"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="S"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnD"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="D"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnF"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="F"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnG"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="G"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnH"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="H"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <!-- Row 3: Z-9 -->
        <Button
            android:id="@+id/btnZ"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Z"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnX"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="X"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="V"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnB"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnN"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="N"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <!-- Row 4: 0-5 -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="24sp"
            android:layout_margin="4dp" />

        <!-- Row 5: 6-9, Back, Enter -->
        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnBack"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="⌫"
            android:textSize="24sp"
            android:layout_margin="4dp" />
        <Button
            android:id="@+id/btnEnter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="✓"
            android:textSize="24sp"
            android:layout_margin="4dp" />

    </GridLayout>

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Админ-панель"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

</LinearLayout>

